<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="0"
        android:textSize="30sp"
        android:padding="8dp"
        android:background="#E0E0E0"
        android:textColor="#000" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:columnCount="4"
        android:rowCount="5">

        <Button
            android:id="@+id/btn7"
            android:layout_height="150dp"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            android:text="8"
            android:layout_height="150dp"/>

        <Button
            android:id="@+id/btn9"
            android:text="9"
            android:layout_height="150dp"/>

        <Button
            android:id="@+id/btnDiv"
            android:text="/"
            android:layout_height="150dp"/>

        <Button
            android:id="@+id/btn4"
            android:text="4"
            android:layout_height="150dp"/>

        <Button
            android:id="@+id/btn5"
            android:text="5"
            android:layout_height="150dp"/>

        <Button
            android:id="@+id/btn6"
            android:text="6"
            android:layout_height="150dp"/>

        <Button
            android:id="@+id/btnMul"
            android:text="*"
            android:layout_height="150dp"/>

        <Button
            android:id="@+id/btn1"
            android:text="1"
            android:layout_height="150dp"/>

        <Button
            android:id="@+id/btn2"
            android:text="2"
            android:layout_height="150dp"/>

        <Button
            android:id="@+id/btn3"
            android:text="3"
            android:layout_height="150dp"/>

        <Button
            android:id="@+id/btnSub"
            android:text="-"
            android:layout_height="150dp"/>

        <Button
            android:id="@+id/btnClear"
            android:text="c"
            android:layout_height="150dp"/>

        <Button
            android:id="@+id/btn0"
            android:text="0"
            android:layout_height="150dp"/>

        <Button
            android:id="@+id/btnEqual"
            android:text="="
            android:layout_height="150dp"/>

        <Button
            android:id="@+id/btnAdd"
            android:text="+"
            android:layout_height="150dp"/>

    </GridLayout>
</LinearLayout>
